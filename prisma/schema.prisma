datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

generator client {
  provider = "prisma-client-js"
}

model Bot {
  id          String   @id @default(cuid())
  name        String
  imageUrl    String
  personality String
  background  String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
} 